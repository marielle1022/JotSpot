<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/photo_date_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:hint="@string/date_time_default" />

        <!--        TODO: set non-emoji default photo for all image views-->

        <ImageView
            android:id="@+id/photo_entry1_view"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:layout_below="@id/photo_date_time_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/photo_entry1_default" />

        <ImageView
            android:id="@+id/photo_entry2_view"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:layout_below="@id/photo_date_time_view"
            android:layout_toEndOf="@id/photo_entry1_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/photo_entry2_default" />

        <ImageView
            android:id="@+id/photo_entry3_view"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:layout_below="@id/photo_date_time_view"
            android:layout_toEndOf="@id/photo_entry2_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/photo_entry3_default" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>